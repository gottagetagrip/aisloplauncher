<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.QUERY_ALL_PACKAGES"/>
    <uses-permission android:name="android.permission.PACKAGE_USAGE_STATS"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.REQUEST_DELETE_PACKAGES"/>

    <application
        android:name=".LauncherApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Myownlauncher">

        <!-- Main Launcher Activity -->
        <activity
            android:name=".ui.MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:stateNotNeeded="true"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Settings Activity -->
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:exported="false"
            android:label="Settings"
            android:parentActivityName=".ui.MainActivity"/>

        <!-- Hidden Apps Activity -->
        <activity
            android:name=".ui.hiddenapps.HiddenAppsActivity"
            android:exported="false"
            android:label="Hidden Apps"
            android:parentActivityName=".ui.settings.SettingsActivity"/>

        <!-- App Customization Activity -->
        <activity
            android:name=".ui.customize.AppCustomizeActivity"
            android:exported="false"
            android:label="Customize App"
            android:parentActivityName=".ui.MainActivity"/>

        <!-- Usage Stats Permission Activity -->
        <activity
            android:name=".ui.permissions.UsageStatsPermissionActivity"
            android:exported="false"/>

    </application>

    <queries>
        <intent>
            <action android:name="android.intent.action.MAIN" />
        </intent>
    </queries>

</manifest>